{
  "buildCommand": "cd frontend && npm install && npm run build && cd ../api && npm install",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install && cd api && npm install",
  "rewrites": [
    { "source": "/api/graphql", "destination": "/api/graphql" },
    { "source": "/graphql", "destination": "/api/graphql" },
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/health", "destination": "/api/health" },
    { "source": "/api/debug", "destination": "/api/debug" },
    { "source": "/debug", "destination": "/api/debug" }
  ]
}
